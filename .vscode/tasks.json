{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "colcon build",
      "type": "shell",
      "command": "colcon build --symlink-install",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "source install",
      "type": "shell",
      "command": "source install/setup.bash",
      "problemMatcher": []
    }
  ]
}
